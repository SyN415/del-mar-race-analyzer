# Del Mar Race Analyzer - Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# REQUIRED: OpenRouter API Configuration
# ============================================
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ============================================
# Application Configuration
# ============================================
# Environment: development or production
ENVIRONMENT=development
APP_ENV=development

# Application port (Render.com will override this)
PORT=8000

# Debug mode (true/false)
DEBUG=1

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable auto-reload in development
RELOAD=true

# ============================================
# Optional: External API Keys
# ============================================
# Equibase API (if available)
EQUIBASE_API_KEY=your_equibase_api_key_here

# Daily Racing Form API (if available)
DRF_API_KEY=your_drf_api_key_here

# ============================================
# Database Configuration (Optional)
# ============================================
# PostgreSQL configuration (if using external DB)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=delmar_races
DB_USER=delmar_user
DB_PASSWORD=secure_password_here

# ============================================
# Scraping Configuration
# ============================================
# Browser timeout in seconds
BROWSER_TIMEOUT=60

# Playwright browsers path (for Render.com)
PLAYWRIGHT_BROWSERS_PATH=/opt/render/project/.cache/ms-playwright

# 2Captcha API key for solving hCaptcha challenges
# Get your API key from: https://2captcha.com/enterpage
# Pricing: ~$2.99 per 1000 hCaptcha solves
TWOCAPTCHA_API_KEY=your_2captcha_api_key_here

# ============================================
# AI Model Configuration
# ============================================
# Default AI model to use
DEFAULT_AI_MODEL=anthropic/claude-sonnet-4.5

# ============================================
# Security Configuration
# ============================================
# Secret key for session management (generate with: openssl rand -hex 32)
SECRET_KEY=

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
